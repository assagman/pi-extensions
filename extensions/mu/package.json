{
  "name": "mu",
  "version": "1.0.0",
  "description": "Condenses tool call/result output in Pi transcript while preserving full outputs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --noEmit && esbuild src/index.ts --bundle --format=esm --platform=node --target=es2022 --outfile=dist/index.js --external:@mariozechner/pi-coding-agent --external:@mariozechner/pi-tui --external:@mariozechner/pi-ai",
    "clean": "rm -rf dist",
    "deploy": "./install.sh",
    "undeploy": "./uninstall.sh"
  },
  "pi": {
    "extensions": ["./dist/index.js"]
  },
  "dependencies": {
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*",
    "shared-tui": "file:../shared/tui"
  },
  "devDependencies": {
    "@types/node": "^22",
    "esbuild": "^0.27.2",
    "typescript": "^5"
  }
}
