{
  "name": "pi-extensions",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": ["extensions/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "clean": "bun run --filter '*' clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": ["biome check --write --no-errors-on-unmatched"]
  }
}
